!!! 5
%html
%head
  %title= title
  = render 'layouts/stylesheets'
  = javascript_include_tag :defaults
  = csrf_meta_tag
  
%body
  = render 'layouts/header'
  .container
    %section.round
      - flash.each do |key,value|
        %div{ :class => "flash #{key}" }=value
      = yield
    = render 'layouts/footer'
  = debug(params) if Rails.env.development?